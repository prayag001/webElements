{
    "manifest_version": 3,
    "name": "Locator Finder",
    "version": "1.2.0",
    "description": "Generate and export element locators for Selenium, Playwright, Cypress & WebDriverIO. No registration required.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_title": "Toggle Locator Finder"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "commands": {
        "toggle-inspect": {
            "suggested_key": {
                "default": "Alt+Shift+L"
            },
            "description": "Toggle Locator Finder panel"
        }
    }
}